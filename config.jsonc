  "width": 1920, // Waybar width
  "spacing": 12, // Gaps between modules (4px)
  // Choose the order of the modules
  "modules-left": ["custom/power", "hyprland/workspaces"],
  "modules-right": [
    "network",
    "cpu",
    "memory",
    "temperature",
    "backlight",
    "keyboard-state",
    "sway/language",
    "battery",
    "battery#bat2",
    "clock",
    "tray",
